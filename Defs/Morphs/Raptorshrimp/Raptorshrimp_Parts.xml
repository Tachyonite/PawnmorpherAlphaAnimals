<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="RaptorshrimpPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>RaptorshrimpMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="RaptorshrimpPart">
		<defName>EtherRaptorshrimpFace</defName>
		<label>raptor shrimp face</label>
		<description>The armoured cranium of a raptor shrimp now covers [PAWN_nameDef]'s old face. Six yellow eyes gleam malevolently from the shell, and strangle mandibles chitter at either side of their jaw.</description>
		<mutationTale>GrewRaptorshrimpFace</mutationTale>
		<mutationMemory>RaptorshrimpFace</mutationMemory>
		<blockSites>
			<li>Jaw</li>
			<li>Eye</li>
		</blockSites>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.40</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
				<statOffsets>
					<SocialImpact>-0.10</SocialImpact>
					<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.10</offset> <!-- I'm using 20% of the base reduction for the adapted across the board, might need balancing though-->
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.20</offset>
					</li>
				</capMods>
				<label>adapted</label>
				<statOffsets>
					<SocialImpact>-0.10</SocialImpact>
					<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>12.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
				<!-- takes 4 days to progress -->
			</li>
		</comps>
		<parts>
			<li>Head</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="RaptorshrimpPart">
		<defName>EtherRaptorshrimpTail</defName>
		<label>raptor shrimp tail</label>
		<description>A massive serpentine tail now sprouts from [PAWN_nameDef]'s body. Fear them!</description>
		<parts>
			<li>Tail</li>
			<li>TailLegShrimp</li>
		</parts>
		<mutationMemory>RaptorshrimpTail</mutationMemory>

		<stages>
			<li>
				<label>unfamiliar</label>
				<capMods>

					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="RaptorshrimpPart">
		<defName>EtherRaptorshrimpArm</defName>
		<label>raptor shrimp blade</label>
		<description>A massive blade replaces the hand on this arm. Excellent for sundering and destroying, very poor for playing the viola or hugging children. Unless they are children you hate.</description>
		<parts>
			<li>Arm</li>
		</parts>
		<blockSites>
			<li>Hand</li>
		</blockSites>
		<stages>
			<li>
				<statOffsets>
					<SocialImpact>-0.10</SocialImpact>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.20</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>blade</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>AA_Pierce</li>
						</capacities>
						<power>20.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						<surpriseAttack>
						<extraMeleeDamages>
							<li>
								<def>Stun</def>
								<amount>20</amount>
							</li>
						</extraMeleeDamages>
						</surpriseAttack>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="RaptorshrimpPart">
		<defName>EtherRaptorshrimpShell</defName>
		<label>raptor shrimp shell</label>
		<description>An incredibly tough shell, the biological equivalent of tank armour.</description>
		<parts>
			<li>Spine</li>
		</parts>
		<stages>
			<li>
				<statOffsets>
					<SocialImpact>-0.10</SocialImpact>
					<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	
	
    <RulePackDef ParentName="CoveringMutationLogPackBase">
        <defName>ShrimpGrowthLogPack</defName>
        <rulePack>
            <rulesStrings>
                <li>label->plate</li>
                <li>bulk_label->coating</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphSkinPart">
		<defName>EtherShrimpyLimb</defName>
		<label>plate</label>
		<description>A layer of thin armour has spread over this limb.</description>
		<classInfluence>RaptorshrimpMorph</classInfluence>
		<parts>
			<li>Torso</li>
			<li>Head</li>
			<li>Ear</li>
			<li>Arm</li>
			<li>Hand</li>
			<li>Leg</li>
			<li>Foot</li>
			<li>Tail</li>
		</parts>
		<mutationLogRulePack>ShrimpGrowthLogPack</mutationLogRulePack>
		<countToAffect>2</countToAffect>
		<categories>
			<li>Minor</li>
		</categories>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.33</severityPerDay>
			</li>
		</comps>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>thick skin</labelOverride>
				<description>The skin here has thickened somewhat.</description>

				<minSeverity>0</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.005</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>tough skin</labelOverride>
				<description>The skin has thickened, and subcutaneous strands of tough fiber are weaving together beneath the surface.</description>
				<minSeverity>0.2</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.01</ArmorRating_Sharp>
				</statOffsets>
			</li>

			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>thin plates</labelOverride>
				<description>The tough fibers have woven together enough to form thin, flexible plates.</description>
				<minSeverity>0.4</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.02</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>solid plates</labelOverride>
				<description>The plates have begun to solidify, leaving flexible, but still tough, soft tissue between them.</description>

				<minSeverity>0.6</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.04</ArmorRating_Sharp>
				</statOffsets>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>thick plates</labelOverride>
				<description>The plates are now strong enough to turn away blades.</description>
				<minSeverity>0.8</minSeverity>
				<statOffsets>
					<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				</statOffsets>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	
	
</Defs>