<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>RipperhoundTransformationMemory</defName>
        <stages>
            <li>
                <label>morphed</label>
                <description>These extra arms make finding clothes a nightmare!</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>Rip and tear!</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>I look like a monster! Where are my eyes!?</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>Yeah, try poking my eyes now, jerks!</description>
                <baseMoodEffect>+1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>RipperhoundRevertedMemory</defName>
        <stages>
            <li>
                <label>reverted</label>
                <description>Two arms is all I ever needed.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>Nooo! I wanted to keep ripping and tearing!</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>I hated not knowing where my eyes were!</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>I'm human again? I think I wanted the opposite of this.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>


    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>RipperhoundEyes</defName>
        <stages>
            <li>
                <label>Ripper... eyes?</label>
                <description>Where are they!?</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Ripper... eyes?</label>
                <description>Total immunity to eye gouge attacks!</description>
                <visible>true</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Ripper... eyes?</label>
                <description>My baby blues! Gone!?</description>
                <visible>true</visible>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>RipperhoundFangs</defName>
        <stages>
            <li>
                <label>Ripper maw</label>
                <description>It's gonna take me years to brush all these!</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Ripper maw</label>
                <description>All the better to eat you with!</description>
                <visible>true</visible>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
            <li>
                <label>Ripper maw</label>
                <description>Too many teeth! Aaah!</description>
                <visible>true</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>RipperhoundSkin</defName>
        <stages>
            <li>
                <label>Ripper hide</label>
                <description>I had such soft, supple skin!</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Ripper hide</label>
                <description>Tough as nails!</description>
                <visible>true</visible>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
            <li>
                <label>Ripper hide</label>
                <description>Oh god, this is one worse than leprosy!</description>
                <visible>true</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>