<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="AnimusvoxPart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>AnimusvoxMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="AnimusvoxPart">
		<defName>EtherAnimusvoxMuzzle</defName>
		<label>vox muzzle</label>
		<description>An adorable little snout graces [PAWN_nameDef]'s face, so cute!</description>
		<parts>
			<li>Jaw</li>
		</parts>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.20</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.20</offset>
					</li>
				</capMods>
				<statOffsets>
					<SocialImpact>+0.05</SocialImpact>
				</statOffsets>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>adapted</label>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.04</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.20</offset>
					</li>
				</capMods>
				<statOffsets>
					<SocialImpact>+0.15</SocialImpact>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>10.0</power>
						<cooldownTime>1.5</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
		<mutationMemory>EtherAnimusvoxSnout</mutationMemory>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="AnimusvoxPart">
		<defName>EtherAnimusvoxEars</defName>
		<label>vox ears</label>
		<description>Ears so big and fluffy they come as a package deal!</description>
		<parts>
			<li>Ear</li>
		</parts>
		<mutationTale>EarsChangedCanid</mutationTale>
		<stages>
			<li>
				<partEfficiencyOffset>0.25</partEfficiencyOffset>
				<statOffsets>
					<SocialImpact>+0.15</SocialImpact>
				</statOffsets>
			</li>
		</stages>
		<mutationMemory>EtherAnimusvoxEar</mutationMemory>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="AnimusvoxPart">
		<defName>EtherAnimusvoxTail</defName>
		<label>vox tail</label>
		<description>A big ol' fluffy tail! Swish, swish!</description>
		<initialSeverity>0.01</initialSeverity>
		<parts>
			<li>Tail</li>
		</parts>
		<mutationTale>GrewTail</mutationTale>
		<stages>
			<li>
				<statOffsets>
					<SocialImpact>+0.15</SocialImpact>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>0.01</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>